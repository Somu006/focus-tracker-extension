{
  "manifest_version": 3,
  "name": "FocusTracker",
  "version": "1.0",
  "description": "Click to toggle between In Focus and Out of Focus with timestamp logs.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}